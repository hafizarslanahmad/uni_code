<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">University Name</th>
      <th scope="col">University City</th>
      <th scope="col">University Specialization</th>
      <th scope="col">User Admin</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @universities.each do |uni|%>
       <tr>
        <th scope="row"><%= uni.id%></th>
        <td><%= uni.name%></td>
        <td><%= uni.city%></td>
        <td><%= uni.specialization%></td>
        <td><%= uni.user.email%></td>
        <td><%= link_to "edit", edit_university_path(uni.id)%></td>
        <td><%= link_to "show", university_path(uni.id)%></td>
        <td><%= button_to "delete", university_path(uni.id), method: :delete %></td>
      </tr>
    <%end%>
  </tbody>
</table>
