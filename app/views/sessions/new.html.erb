<h1>Sign In</h1>

<div class="row justify-content-center">
    <%= form_with  url: sign_in_path, data: { turbo: false } do |form|%>
        <div class="form-group">
          <%=form.label :Email%>
          <%= form.text_field :email, class: 'form-control', placeholder: 'Enter Your Email'%>
        </div>
        <div class="form-group">
          <%=form.label :Password%>
          <%= form.password_field :password, class: 'form-control', placeholder: 'Enter Your Password'%>
          <%= link_to "Forgot your password", password_reset_path%>
        </div> <br>
        <div class="form-group">
          <%= form.submit "Sign In", class: 'btn btn-primary'%>
        </div>
    <%end%>
</div>    
